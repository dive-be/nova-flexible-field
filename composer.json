{
    "name": "dive-be/nova-linkable-field",
    "description": "Optionally link to a different model as an alternative to a manual attribute value.",
    "keywords": [
        "laravel",
        "nova",
        "model"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "laravel/nova": "^3.31"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "nunomaduro/larastan": "^2.1",
        "orchestra/testbench": "^7.2",
        "pestphp/pest": "^1.21"
    },
    "autoload": {
        "psr-4": {
            "Dive\\Nova\\Linkable\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dive\\Nova\\Linkable\\FieldServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse --memory-limit=2G",
        "format": "vendor/bin/php-cs-fixer fix --config .php-cs-fixer.dist.php --allow-risky=yes",
        "test": "vendor/bin/pest"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
